ư<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/CSS_Admin.css" rel="stylesheet" />
</head>
<body>
    <div>   
        <div class="nav nav-tabs" id="menu">
            <ul class="nav">
                <li class="nav-item"><a href="@Url.Action("Admin","Admin")" class="nav-link active">Administrator</a></li>
                <li class="nav-item"><a href="@Url.Action("Logout","Admin")" class="nav-link">Quay Lại Trang Chủ</a></li>
                <li class="nav-item"><a href="#" class="nav-link">Liên Hệ</a></li>
                <li class="nav-item"><a href="#" class="nav-link">Giới Thiệu</a></li>
                <li class="nav-item"><a href="@Url.Action("Logout","Admin")" class="nav-link">ĐĂNG XUẤT</a></li>
            </ul>

        </div>
        <div class="row">
            <div class="col-md-3" id="list">
                <ul class="list-group">
                    <li class="list-group-item list-group-item-success" style="font-weight:bold; font-size:18pt" id="a1">TRANG CHỦ ADMIN</li>
                    <li class="list-group-item list-group-item-info" style="font-size:18pt" id="a2">LOẠI SẢN PHẨM</li>
                    <li class="list-group-item list-group-item-warning" style="font-size:18pt" id="a3"><a href="@Url.Action("Index","Admin")">SẢN PHẨM</a></li>
                    <li class="list-group-item list-group-item-danger" style="font-size:18pt" id="a4">ĐƠN ĐĂT HÀNG</li>
                    <li class="list-group-item list-group-item-secondary" style="font-size:18pt" id="a5">KHÁCH HÀNG</li>

                </ul>
            </div>
            <div class="col-md-9">
                <div class="rounded-top">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</body>
</html>
